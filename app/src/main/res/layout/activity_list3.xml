<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimaryDark"
        app:title="Electrician"
        app:titleTextColor="@android:color/white"
        android:elevation="4dp"
        android:layout_gravity="top"></android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="79dp"
        android:background="#D3D3D3"
        android:orientation="horizontal"
        android:padding="5dip">

        <!--  ListRow Left sied Thumbnail image -->
        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            android:background="@android:color/black"
            android:padding="3dip">

            <ImageView
                android:id="@+id/id2"
                android:layout_width="50dip"
                android:layout_height="56dp"
                android:background="@null"
                android:src="@drawable/elec" />

        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="183dp"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/thumbnail"
            android:text="Faisal Ibrahim"
            android:textColor="@android:color/black"
            android:textSize="18dip"
            android:textStyle="bold"
            android:typeface="sans" />

        <!-- Artist Name -->
        <TextView
            android:id="@+id/artist"
            android:layout_width="179dp"
            android:layout_height="31dp"
            android:layout_below="@id/title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="73dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="137dp"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Serving since 2001"
            android:textColor="#808080"
            android:textSize="12dip" />

        <!-- Rightend Duration -->
        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/title"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="37dp"
            android:gravity="right"
            android:text="PKR 500"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20dip"
            android:textStyle="bold" />

        <!-- Rightend Arrow -->

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="257dp"
        android:background="#D3D3D3"
        android:orientation="horizontal"
        android:padding="5dip">

        <!--  ListRow Left sied Thumbnail image -->
        <LinearLayout
            android:id="@+id/thumbnail4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            android:background="@android:color/black"
            android:padding="3dip">

            <ImageView
                android:id="@+id/list_image4"
                android:layout_width="50dip"
                android:layout_height="56dp"
                android:src="@drawable/elec" />

        </LinearLayout>

        <!-- Title Of Song-->
        <TextView
            android:id="@+id/title4"
            android:layout_width="183dp"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/thumbnail4"
            android:layout_marginStart="11dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/thumbnail4"
            android:text="Faiq Butt"
            android:textColor="@android:color/black"
            android:textSize="18dip"
            android:textStyle="bold"
            android:typeface="sans" />

        <!-- Artist Name -->
        <TextView
            android:id="@+id/artist4"
            android:layout_width="179dp"
            android:layout_height="31dp"
            android:layout_below="@id/title4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="79dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="161dp"
            android:text="Serving Since 2005"
            android:textColor="#808080"
            android:textSize="12dip" />

        <!-- Rightend Duration -->
        <TextView
            android:id="@+id/duration4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/title4"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="37dp"
            android:gravity="right"
            android:text="PKR 800"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20dip"
            android:textStyle="bold" />

        <!-- Rightend Arrow -->

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="169dp"
        android:background="#D3D3D3"
        android:orientation="horizontal"
        android:padding="5dip">

        <!--  ListRow Left sied Thumbnail image -->
        <LinearLayout
            android:id="@+id/thumbnail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            android:background="@android:color/black"
            android:padding="3dip">

            <ImageView
                android:id="@+id/list_image1"
                android:layout_width="50dip"
                android:layout_height="52dp"
                android:src="@drawable/elec" />

        </LinearLayout>

        <!-- Title Of Song-->
        <TextView
            android:id="@+id/title1"
            android:layout_width="183dp"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/thumbnail1"
            android:layout_marginStart="11dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/thumbnail1"
            android:text="Aliyan"
            android:textColor="@android:color/black"
            android:textSize="18dip"
            android:textStyle="bold"
            android:typeface="sans" />

        <!-- Artist Name -->
        <TextView
            android:id="@+id/artist1"
            android:layout_width="179dp"
            android:layout_height="31dp"
            android:layout_below="@id/title1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="79dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="161dp"
            android:text="Status Not Available"
            android:textColor="#808080"
            android:textSize="12dip" />

        <!-- Rightend Duration -->
        <TextView
            android:id="@+id/duration1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/title1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="37dp"
            android:gravity="right"
            android:text="PKR 1500"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20dip"
            android:textStyle="bold" />

        <!-- Rightend Arrow -->

    </RelativeLayout>

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="429dp"
        android:text="Proceed"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />
</RelativeLayout>